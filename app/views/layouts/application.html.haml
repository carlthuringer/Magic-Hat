!!!
%html
  %head
    %title #{ title }
    = stylesheet_link_tag 'jquery_mobile'
    = javascript_include_tag 'jquery', 'jquery_ujs', 'jquery_mobile', 'application'

    %link{ 'href' => 'http://fonts.googleapis.com/css?family=Crimson+Text:regular,regularitalic,bolditalic', 'rel' => 'stylesheet', 'type' => 'text/css' }
    = csrf_meta_tag
    %meta{ 'name' => 'viewport', 'content' => 'width=device-width', 
           'initial-scale' => '1.0', 'maximum-scale' => '1.0',
           'user-scalable' => 'no'}
    %meta{ 'name' => 'apple-mobile-web-app-capable', 'content' => 'yes' }
    %link{ 'rel' => "apple-touch-icon", 'href' => 'images/magic_hat_rough.png' }
  %body
    %div{ :data => { :role => "page" } }
      = render 'layouts/header'
      %div.container{ :data => { :role => "content" } }
        - flash.each do |key, value|
          .flash{:class => key}
            = value
        = yield
